<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="preconnect" href="https://fonts.googleapis.com">
<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
<link href="https://fonts.googleapis.com/css2?family=Roboto+Condensed:wght@400;700&display=swap" rel="stylesheet"/>
<link rel="stylesheet" href="/css/order.css">
    <title>Admin Dashboard</title>
</head>
<body>
  <!-- Modal Overlay -->
<div id="modalOverlay" class="modal-overlay hidden">
  <div class="modal-content">
    <button class="close-modal" id="closeModal">&times;</button>
    <div id="modalDetails" class="modal-details">
    </div>
  </div>
</div>

<div class="edit-modal-overlay hidden" id="editModalOverlay">
  <div class="edit-modal">
    <span class="close-edit-modal" id="closeEditModal">&times;</span>
    <h2 class="h2-payment">Edit Payment Status</h2>
    <form id="editStatusForm">
      <div>
        <label for="editStatusSelect">Change Status:</label>
      <select id="editStatusSelect">
        <option value="YES">Paid</option>
        <option value="NO">Unpaid</option>
      </select>
      </div>
     <div>
      <label for="editStatusSelect">payment method:</label>
       <input type="text" name="paymentMethod" id="paymentMethod">
     </div>
      <div>
        <button type="submit" class="update-btn-class">Update Order</button>
      </div>
    </form>
  </div>
</div>


    <div class="dashboard-container">
    <aside class="sidebar">
      <h2 class="logo">Welcome, <%= user.username %></h2>
      <ul class="nav">
          <li class="<%= currentPath === '/dashboard' ? 'active' : '' %>">
          <a href="/user/dashboard" class="link_a">Dashboard</a>
          <img src="/assets/dashimg.svg" alt="">
        </li>
        <li class="<%= currentPath === '/orders' ? 'active' : '' %>">
          <a href="/user/orders" class="link_a">Orders</a>
          <img src="/assets/orderimg.svg" alt="">
        </li>
        <li class="<%= currentPath === '/new-orders' ? 'active' : '' %>">
          <a href="/user/new-orders" class="link_a">New Orders</a>
          <img src="/assets/newimgorder.svg" alt="">
        </li>
        <li class="<%= currentPath === '/settings' ? 'active' : '' %>">
          <a href="/user/settings" class="link_a">Settings</a>
          <img src="/assets/settingsimg.svg" alt="">
        </li>
      </ul>
    </aside>

    <main class="main-content">
      <header class="top-bar">
        <div class="admin-info">
          <form action="/auth/logout" method="post">
              <button class="logout-btn">
                <p class="logout-text">Logout</p>
              <img src="/assets/logout.svg" alt="logout-svg">
              </button>
        </form>
        </div>
      </header>

      <section class="content-area">
        <h1>Sales History</h1>
        <div class="input-container">
        <input type="search" id="search-order" placeholder="Search for order by customer name">
   <button class="btn-input active-filter" data-filter="all">All</button>
<button class="btn-input" data-filter="YES">Paid</button>
<button class="btn-input" data-filter="NO">Unpaid</button>
        </div>
      </section>

      <section class="orders-container" id="ordersContainer">
        <div id="loader" class="dot-loader hidden">
  <span></span><span></span><span></span><span></span><span></span>
        </div>
      </section>
      <div id="pagination"></div>

    </main>
  </div>

<script src="/js/dashboardOrder.js" type="module"></script>
</body>
</html>